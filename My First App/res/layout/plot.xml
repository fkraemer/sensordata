
<com.my.example.my.first.app.LockableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical">    

        <com.androidplot.xy.XYPlot
        android:id="@+id/temperatureXYPlot"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        title="Temperature Data" />
        
        <TextView 
            android:id="@+id/txtview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    
    <com.androidplot.xy.XYPlot
        android:id="@+id/moistureXYPlot"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        title="Moisture Data" />
    
    
</LinearLayout>

</com.my.example.my.first.app.LockableScrollView>
